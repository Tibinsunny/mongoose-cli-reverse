{
  "name": "mongoose-cli",
  "version": "1.0.0",
  "description": "A command line interface (CLI) for Mongoose",
  "main": "./src/mongoose.js",
  "homepage": "https://github.com/waptik/mongoose-cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/waptik/mongoose-cli.git"
  },
  "author": "waptik <itswaptik@gmail.com>",
  "license": "MIT",
  "private": false,
  "bugs": {
    "url": "https://github.com/waptik/mongoose-cli/issues"
  },
  "keywords": [
    "mongoose",
    "cli",
    "mongodb",
    "migrations"
  ],
  "options": {
    "mocha": "--require scripts/mocha-bootload.js --check-leaks --exit --timeout 30000 --colors --reporter spec"
  },
  "eslintIgnore": [
    "test/support",
    "src/assets"
  ],
  "scripts": {
    "build": "npm run build-clean && babel src -d lib && npm run build-bin && npm run build-assets",
    "build-bin": "mv ./lib/mongoose.js ./lib/mongoose && chmod +x ./lib/mongoose",
    "build-assets": "cp -R ./src/assets ./lib/",
    "build-clean": "rm -rf ./lib/",
    "lint": "eslint test src",
    "test-raw": "jest 'test/**/*.test.js'",
    "lint:fix": "npm run lint -- --fix",
    "lint:quiet": "npm run lint -- --quiet",
    "pretest": "npm run lint:quiet && npm run prettier:check",
    "test": "npm run lint && npm run build && npm run test-raw",
    "prettier": "prettier \"src/**/*.js\" \"test/**/*.js\"",
    "prettier:write": "npm run prettier -- --write",
    "prettier:check": "npm run prettier -- --list-different"
  },
  "dependencies": {
    "bluebird": "^3.5.5",
    "cli-color": "^1.4.0",
    "fs-extra": "^8.0.1",
    "js-beautify": "^1.10.0",
    "lodash": "^4.17.11",
    "resolve": "^1.11.0",
    "umzug": "^2.2.0",
    "yargs": "^13.2.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-transform-async-to-generator": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "eslint": "^5.16.0",
    "gulp": "^4.0.2",
    "husky": "^2.4.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.2.0",
    "mongoose": "^5.5.12",
    "prettier": "^1.17.1"
  },
  "engines": {
    "node": ">=11.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
